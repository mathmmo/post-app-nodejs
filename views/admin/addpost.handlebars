{{#each errors}}
    <div class="alert alert-danger">Error: {{status}} - {{message}}</div>
{{!-- {{else}} --}}
{{/each}}

<div class="card">
    <div class="class-header">
        <h3 class="card-title mt-4">New Post</h3>
    </div>
    <div class="card-body">
        <form action="/admin/categories/new" method="post"> {{! Change action path}}
            <label for="title">Title: </label>
                <input type="text" name="title" id="title" class="form-control mt-1">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" class="form-control mt-1">
            <label for="description">Description: </label>
                <input type="text" name="description" id="description" class="form-control mt-1">
            <label for="content">content: </label>
                <textarea name="content" id="content" class="form-control mt-1"></textarea>
            <label for="category">Category</label>
                <select name="category" id="category" class="form-control mt-1">
                    {{#each categories}}
                        <option value="{{_id}}">{{name}}</option>
                    {{else}}
                        <option value="0">-- None --</option>
                    {{/each}}
                </select>
            <br>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
</div>